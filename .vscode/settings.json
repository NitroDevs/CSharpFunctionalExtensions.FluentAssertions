{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    },

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/bin": true,
        "**/obj": true
    },
    "omnisharp.useEditorFormattingSettings": true,
    "dotnet.defaultSolution": "CSharpFunctionalExtensions.FluentAssertions.sln",
    "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true
}